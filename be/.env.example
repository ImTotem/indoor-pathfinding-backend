# .env.example
# 이 파일을 .env로 복사하고 실제 값으로 수정하세요

# SLAM 엔진 선택 (rtabmap)
SLAM_ENGINE=rtabmap

# RTAB-Map 설정
# - 로컬 설치: /path/to/rtabmap
# - Docker 모드: docker://<container_name> (예: docker://rtabmap)
RTABMAP_PATH=docker://rtabmap

# 로그 레벨 (DEBUG | INFO | WARNING | ERROR)
LOG_LEVEL=INFO

# Fixed Map Mode (고정 맵 모드)
# true: 특정 맵만 사용 (relocalization 전용)
# false: 모든 맵 리스트 표시 (기본값)
USE_FIXED_MAP=false
FIXED_MAP_ID=your_map_id_here

# 데이터 저장 경로 (선택사항, 기본값: ./data)
# DATA_DIR=./data

# PostgreSQL Configuration (for SLAM job queue and database storage)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=slam_db
POSTGRES_USER=slam_service
POSTGRES_PASSWORD=changeme
