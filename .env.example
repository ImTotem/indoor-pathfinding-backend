# .env.example
# Copy this file to .env and update with actual values

# Server Port
SERVER_PORT=5000

# SLAM Engine Selection
SLAM_ENGINE=rtabmap

# RTAB-Map Configuration
# - Local install: /path/to/rtabmap
# - Docker mode: docker://<container_name> (e.g., docker://rtabmap)
RTABMAP_PATH=docker://rtabmap

# Log Level (DEBUG | INFO | WARNING | ERROR)
LOG_LEVEL=INFO

# Fixed Map Mode (optional)
# true: Use specific map only (relocalization mode)
# false: Show all maps (default)
USE_FIXED_MAP=false
FIXED_MAP_ID=

# PostgreSQL Configuration (indoor-pathfinding-backend의 기존 DB 사용)
POSTGRES_HOST=indoor-pathfinding-db
POSTGRES_PORT=5432
POSTGRES_DB=indoor_pathfinding
POSTGRES_USER=indoor
POSTGRES_PASSWORD=indoor1234
